#!/usr/bin/env bash
# Maintainer: Hunter Peavey < printf "srht@die.bots" | sed "s/die.bots/krathalan.net/g" >
# shellcheck disable=SC2034
# shellcheck disable=SC2154

# General package information
pkgname=krathalans-server-home
pkgver=65
pkgrel=1
pkgdesc="Packages and configuration for Krathalan's servers"
url="https://git.sr.ht/~krathalan/pkgbuilds"
license=("GPL3")
arch=("any")

# Overwrite config files that are owned by packages, e.g. /etc/pacman.conf
install=overwrite-configs.install

source=("https://git.sr.ht/~krathalan/etc-config/archive/${pkgver}.tar.gz" "https://git.sr.ht/~krathalan/etc-config/blob/master/signatures/${pkgver}.tar.gz.sig")
validpgpkeys=("B46B326273E4A1D21AAA3F6F529AC10050BD24EF")
sha512sums=("be7c6261dec84811143bf80f737328aef58ba3ded4a2f84a6d46efa2613b9ac6ee6fb8d76dd6c6fe0cb02ba8b1c3d9935ea4739ccad07d4eed5af27edaab78cd" "8a9599c8f20a57a9f9f67dcba3fd9dc9c4ff87dc7b86db0fe7a7c111e895d9114a6a7c0e3c2ce388d1b3bd091fff1a5747754f76dc788fff934ffe18bff7d61b")

# Dependencies
depends=(
    # From builds.krathalan.net
    "krack-git"
    "krathalans-apparmor-profiles-git"
    "krathalans-scripts-git"
    "krathalans-systemd-sandboxing-git"
    "cloudflared" "etc-update" "jellyfin-server"
    "jellyfin-web" "micro" "pi-hole-server"

    # Syncthing web GUI reverse proxy
    "nginx-mainline"

    # Pihole
    "lighttpd" "php-cgi" "php-sqlite"

    # System packages
    "apparmor" "bash-completion" "dash" "gptfdisk" "lsscsi"
    "mosh" "openssh" "pigz" "pkgstats" "rng-tools" "rsync"
    "stress" "sudo" "syncthing" "ufw"

    # Package building
    "ccache" "devtools"

    # Backups
    "borg"

    # Terminal applications
    "arch-audit" "bat" "bc" "brotli" "e2fsprogs" "exa"
    "htop" "inotify-tools" "jq" "logrotate" "man-db"
    "man-pages" "nano" "ncdu" "ripgrep" "texinfo" "tmux"
    "tree"

    # Development packages
    "git"
)

package() {
    cd "${srcdir}/etc-config-${pkgver}" || exit

    install -D -m644 home-server/pacman.conf "${pkgdir}/etc/krathalan/pacman.conf"
    install -D -m644 home-server/sshd_config "${pkgdir}/etc/krathalan/ssh/sshd_config"

    install -D -m644 server/modprobe.d/modprobed-hardening.conf "${pkgdir}/etc/modprobe.d/modprobed-hardening.conf"

    install -D -m644 pacman.d/hooks/dash.hook "${pkgdir}/etc/pacman.d/hooks/dash.hook"

    install -D -m644 ssh/ssh_config "${pkgdir}/etc/krathalan/ssh/ssh_config"

    install -D -m644 server/sysctl.d/krathalans-custom-server.conf "${pkgdir}/etc/sysctl.d/krathalans-custom-server.conf"
    install -D -m644 server/sysctl.d/disable-user-namespaces.conf "${pkgdir}/etc/sysctl.d/disable-user-namespaces.conf"

    install -D -m644 systemd/coredump.conf.d/krathalans-custom.conf "${pkgdir}/etc/systemd/coredump.conf.d/krathalans-custom.conf"
    install -D -m644 systemd/system.conf.d/krathalans-custom.conf "${pkgdir}/etc/systemd/system.conf.d/krathalans-custom.conf"

    install -D -m644 udev/rules.d/60-ioschedulers.rules "${pkgdir}/etc/udev/rules.d/60-ioschedulers.rules"
}
