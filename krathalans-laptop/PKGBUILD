#!/usr/bin/env bash
# Maintainer: Hunter Peavey < krathalan at disroot dot org >
# shellcheck disable=SC2034
# shellcheck disable=SC2154

# General package information
pkgname=krathalans-laptop
pkgver=5
pkgrel=1
pkgdesc="Packages and configuration for Krathalan's laptop"
url="https://git.sr.ht/~krathalan/pkgbuilds"
license=("GPL3")
arch=("any")

source=("https://git.sr.ht/~krathalan/etc-config/archive/${pkgver}.tar.gz" "https://git.sr.ht/~krathalan/etc-config/blob/master/signatures/${pkgver}.tar.gz.sig")
validpgpkeys=("02AAA23ABDF1D538BD889D251AADE5E728FFC667")
sha512sums=("de6024835614d1505c9a6c2222237ce5156141fb41810ae6c62dc3448aabf79a1a83af71adba17642412de7e3713691f20abb45f585b2503400c456e389c20e3" "1f1b7eeced5a83c1c8d1cab1cc5a1a6afce1f0e59a5c45ec91a69623c85993444e44116803878dad9e00ac9d3c034dfc8a02765da3008d177e316439de2f5bb2")

# Dependencies
depends=(
    # System packages
    "smartmontools" "tlp" "x86_energy_perf_policy"

    # Wayland packages
    "bemenu" "grim" "light" "mako" "slurp" "sway"
    "swayidle" "swaylock" "waybar" "wl-clipboard"
    "xorg-server-xwayland"
)

package() {
    cd "${srcdir}/etc-config-${pkgver}/laptop" || exit
    install -D -m644 cmdline "${pkgdir}/etc/cmdline"
    install -D -m644 vconsole.conf "${pkgdir}/etc/vconsole.conf"

    install -D -m644 dracut.conf.d/krathalans-custom-laptop.conf "${pkgdir}/etc/dracut.conf.d/krathalans-custom-laptop.conf"

    install -D -m644 NetworkManager/conf.d/networkmanager-hardening.conf "${pkgdir}/etc/NetworkManager/conf.d/networkmanager-hardening.conf"
    install -D -m644 NetworkManager/conf.d/wifi-backend.conf "${pkgdir}/etc/NetworkManager/conf.d/wifi-backend.conf"

    install -D -m644 systemd/system/undervolt.service "${pkgdir}/etc/systemd/system/undervolt.service"
    install -D -m644 systemd/system/undervolt.timer "${pkgdir}/etc/systemd/system/undervolt.timer"

    install -D -m644 ../tlp.d/krathalans-custom.conf "${pkgdir}/etc/tlp.d/krathalans-custom.conf"
}
