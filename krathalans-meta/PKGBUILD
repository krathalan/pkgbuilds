#!/usr/bin/env bash
# Maintainer: Hunter Peavey < printf "srht@die.bots" | sed "s/die.bots/krathalan.net/g" >
# shellcheck disable=SC2034
# shellcheck disable=SC2154

# General package information
pkgname=krathalans-meta
pkgver=56
pkgrel=2
pkgdesc="Packages and configuration for Krathalan's computers"
url="https://git.sr.ht/~krathalan/pkgbuilds"
license=("GPL3")
arch=("any")

# Overwrite config files that are owned by packages, e.g. /etc/pacman.conf
install=overwrite-configs.install

source=("https://git.sr.ht/~krathalan/etc-config/archive/${pkgver}.tar.gz" "https://git.sr.ht/~krathalan/etc-config/blob/master/signatures/${pkgver}.tar.gz.sig")
validpgpkeys=("B46B326273E4A1D21AAA3F6F529AC10050BD24EF")
sha512sums=("adc6cb9261e90116dd586716727566e5876e4ce2cde095f2e9ffd5a6dfed5d5172f96b976bb613ece0732c2d09731bcf106f4fe752777d68de44839a5fb7278c" "8c9f9cd7fd1a1f2f88f6491e307ffb9b5b37b8b6abcf9ef3c8e2754dc8b24aad00909d94aee4d319cd456d0ebc2e8de5b2bbea0e1f77a1727f409f3ebe4a9d4c")

# Dependencies
depends=(
    # From builds.krathalan.net
    "bottom" "dict-gcide" "dict-moby-thesaurus" "etc-update"
    "gimp-git" "gmni-git" "micro" "nemo-no-gvfs"
    "otf-san-francisco" "pash" "plata-theme" "pfetch-git"
    "tealdeer" "ttf-material-design-icons-webfont"
    "ungoogled-chromium" "wtwitch"

    # Fonts
    "gnu-free-fonts" "noto-fonts" "noto-fonts-cjk"
    "noto-fonts-emoji" "otf-fira-mono" "terminus-font"
    "ttf-dejavu" "ttf-ibm-plex" "ttf-linux-libertine"
    "ttf-roboto" "ttf-roboto-mono"

    # System Packages
    "alsa-plugins" "apparmor" "asp" "bash-completion"
    "bluez" "bluez-utils" "crda" "dash" "exfatprogs"
    "f2fs-tools" "ffmpeg" "fwupd" "gst-libav"
    "gst-plugins-base" "hunspell-en_US" "iwd" "logrotate"
    "man-db" "man-pages" "notification-daemon"
    "papirus-icon-theme" "pkgstats" "pulseaudio-alsa"
    "pulseaudio-bluetooth" "rng-tools" "source-highlight"
    "systemd-resolvconf" "ufw" "usbguard" "usbutils"
    "wireguard-tools"

    # Backups
    "borg" "python-llfuse"

    # Printing
    "cups" "hplip"

    # Terminal applications
    "android-tools" "arch-audit" "archiso" "bat" "calc"
    "cmatrix" "dictd" "dosfstools" "e2fsprogs" "exa"
    "efitools" "fff" "gptfdisk" "htop" "hyperfine" "irssi"
    "isync" "iw" "khard" "lzop" "mediainfo" "mosh" "nano"
    "nano-syntax-highlighting" "ncdu" "neomutt"
    "pacman-contrib" "pamixer" "pandoc"
    "perl-image-exiftool" "pigz" "playerctl" "qpdf"
    "qrencode" "shellcheck" "stow" "stress" "termdown"
    "transmission-cli" "unzip" "w3m" "vdirsyncer" "which"
    "xxhash" "youtube-dl" "zip"

    # Graphical applications
    "alacritty" "epiphany"  "evince" "firefox"
    "firefox-developer-edition" "foliate" "gnome-characters"
    "imv" "libreoffice-fresh" "meld" "lollypop" "mpv"
    "pavucontrol" "signal-desktop" "syncthing" "zim"

    # Development packages
    "ccache" "code" "devtools" "git" "go" "meson"
    "ninja" "scdoc"
)

package() {
    cd "${srcdir}/etc-config-${pkgver}" || exit
    install -D -m644 conf.d/wireless-regdom "${pkgdir}/etc/krathalan/conf.d/wireless-regdom"
    install -D -m644 dict/dictd.conf "${pkgdir}/etc/krathalan/dict/dictd.conf"
    install -D -m644 issue "${pkgdir}/etc/krathalan/issue"
    install -D -m644 pacman.conf "${pkgdir}/etc/krathalan/pacman.conf"
    install -D -m644 pacman.d/mirrorlist "${pkgdir}/etc/krathalan/pacman.d/mirrorlist"
    install -D -m644 sudoers "${pkgdir}/etc/krathalan/sudoers"

    install -D -m644 dracut.conf.d/krathalans-custom.conf "${pkgdir}/etc/dracut.conf.d/krathalans-custom.conf"

    install -D -m644 modprobe.d/modprobed-hardening.conf "${pkgdir}/etc/modprobe.d/modprobed-hardening.conf"

    install -D -m644 systemd/network/25-wireless.network "${pkgdir}/etc/systemd/network/25-wireless.network"
    install -D -m644 systemd/network/26-ethernet.network "${pkgdir}/etc/systemd/network/25-ethernet.network"
    install -D -m644 systemd/resolved.conf.d/disable-fallback-dns.conf "${pkgdir}/etc/systemd/resolved.conf.d/disable-fallback-dns.conf"

    install -D -m644 pacman.d/hooks/77-systemd-boot.hook "${pkgdir}/etc/pacman.d/hooks/77-systemd-boot.hook"
    install -D -m644 pacman.d/hooks/dash.hook "${pkgdir}/etc/pacman.d/hooks/dash.hook"
    install -D -m644 pacman.d/hooks/dracut.hook "${pkgdir}/etc/pacman.d/hooks/dracut.hook"

    install -D -m644 ssh/ssh_config "${pkgdir}/etc/krathalan/ssh/ssh_config"
    install -D -m644 ssh/sshd_config "${pkgdir}/etc/krathalan/ssh/sshd_config"

    install -D -m644 sysctl.d/krathalans-custom.conf "${pkgdir}/etc/sysctl.d/krathalans-custom.conf"

    install -D -m644 systemd/coredump.conf.d/krathalans-custom.conf "${pkgdir}/etc/systemd/coredump.conf.d/krathalans-custom.conf"
    install -D -m644 systemd/logind.conf.d/krathalans-custom.conf "${pkgdir}/etc/systemd/logind.conf.d/krathalans-custom.conf"
    install -D -m644 systemd/system.conf.d/krathalans-custom.conf "${pkgdir}/etc/systemd/system.conf.d/krathalans-custom.conf"

    install -D -m644 udev/rules.d/51-android.rules "${pkgdir}/etc/udev/rules.d/51-android.rules"
    install -D -m644 udev/rules.d/60-ioschedulers.rules "${pkgdir}/etc/udev/rules.d/60-ioschedulers.rules"
}
